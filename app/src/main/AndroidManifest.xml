<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/calcicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/calcicon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calc"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Calculator"
            android:theme="@style/Theme.Calc">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.theme"
                android:resource="@style/AppTheme" /> <!-- Default to dark theme -->
            <meta-data
                android:name="android.app.theme"
                android:resource="@style/AppTheme" /> <!-- Light theme -->
        </activity>
    </application>

</manifest>
